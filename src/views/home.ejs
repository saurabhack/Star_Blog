<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('./partials/tailwind') %>
</head>
<body class="bg-gray-100">
    <%- include('./partials/nav') %>

    <h1 class="text text-center text-2xl mt-8">Welcome to  Star Blog</h1>

    <div class="container mx-auto py-10 px-4 sm:px-6 lg:px-8 mt-8">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <% blogs.forEach(function(blog) { %>
            <div class="bg-white shadow-md rounded-lg overflow-hidden transform transition duration-300 hover:scale-105">
              <img class="w-full h-48 object-cover" src="<%= blog.coverImageURL %>" alt="<%= blog.title %>">
              
              <div class="p-6">
                <h2 class="text-lg font-bold text-gray-800 mb-2"><%= blog.title %></h2>
                <p class="text-gray-600 text-sm mb-4"><%= blog.body.substring(0, 100) %>...</p>
                <a href="/blog/<%= blog._id %>" class="text-indigo-500 hover:text-indigo-700 font-medium">Read More</a>
              </div>
            </div>
          <% }); %>
        </div>
    </div>
    
</body>
</html>
